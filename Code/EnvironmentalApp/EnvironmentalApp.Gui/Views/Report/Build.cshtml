                        <input type="checkbox" name="datatype" value="steamcampusdailytotals" /> Steam Campus<br />
                        <input type="checkbox" name="datatype" value="winddailytotals" /> Wind<br />
                        <input type="checkbox" name="datatype" value="solarbusbarndailytotals" /> Solar Bus Barn<br />
