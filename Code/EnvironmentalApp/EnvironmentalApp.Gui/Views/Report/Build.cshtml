                </div>

                <div id="reportInfo">
                    <h4>Report Name</h4>
                    <input type="text" id="reportname" name="reportname" required />
                    Graph Type: <select name="graphtype"><option value="Line">Line</option><option value="Bar">Bar</option></select><br />
                    <h4>Date Time Range</h4>
                    <label for="from">From</label>
                    <input type="text" id="from" name="sdate" required />
                    <label for="to">To</label>
                    <input type="text" id="to" name="edate" required )"><br /><br />
                    <input type="submit" id="submit" value="Build" />
                </div>
                
            </form>

        </div>


<script>

    $(function () {

        $("#from").datetimepicker({
            defaultDate: "*",
            changeMonth: true,
            numberOfMonths: 1,
            maxDate: new Date,
            onClose: function (selectedDate) {
                $("#to").datepicker("option", "minDate", selectedDate);
            }
        });

        $("#to").datetimepicker({
            defaultDate: "*",
            changeMonth: true,
            numberOfMonths: 1,
            maxDate: new Date,
            onClose: function (selectedDate) {
                $("#from").datepicker("option", "maxDate", selectedDate);
            }
        });

    });



</script>